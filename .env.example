# WaddleBot Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================
# Database Configuration
# ===========================
POSTGRES_USER=waddlebot
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=waddlebot
DATABASE_URL=postgresql://waddlebot:your_secure_password_here@db:5432/waddlebot
READ_REPLICA_URL=postgresql://waddlebot:your_secure_password_here@db:5432/waddlebot

# ===========================
# Redis Configuration  
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ===========================
# Core System Configuration
# ===========================
MODULE_VERSION=1.0.0
SESSION_TTL=3600

# Router Module
MODULE_NAME_ROUTER=router
ROUTER_MAX_WORKERS=20
ROUTER_MAX_CONCURRENT=100
ROUTER_REQUEST_TIMEOUT=30
ROUTER_DEFAULT_RATE_LIMIT=60
ROUTER_COMMAND_CACHE_TTL=300
ROUTER_ENTITY_CACHE_TTL=600

# Core API URLs
CORE_API_URL=http://router:8000
ROUTER_API_URL=http://router:8000/router
CONTEXT_API_URL=http://router:8000/api/context
REPUTATION_API_URL=http://router:8000/api/reputation
GATEWAY_ACTIVATE_URL=http://router:8000/api/gateway/activate

# Marketplace Module
MODULE_NAME_MARKETPLACE=marketplace

# Portal Module
SMTP_HOST=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=portal@company.com
SMTP_PASSWORD=smtp_password
SMTP_TLS=true
FROM_EMAIL=noreply@waddlebot.com

# ===========================
# Kong API Gateway
# ===========================
KONG_ADMIN_URL=http://kong:8001
KONG_ADMIN_USERNAME=admin
KONG_ADMIN_PASSWORD=admin_password

# Kong Admin Broker
BROKER_SECRET_KEY=waddlebot_broker_secret_key_change_me_in_production
BROKER_API_KEY=wbot_broker_master_key_placeholder
MODULE_NAME_KONG_BROKER=kong_admin_broker
SUPER_ADMIN_GROUP=super-admins
API_KEY_LENGTH=64
REQUIRE_EMAIL_VERIFICATION=false

# ===========================
# Identity Core Module
# ===========================
SECRET_KEY=waddlebot_identity_secret_key_change_me_in_production
VERIFICATION_CODE_LENGTH=6
VERIFICATION_TIMEOUT_MINUTES=10
RESEND_COOLDOWN_SECONDS=60
MAX_VERIFICATION_ATTEMPTS=5
MAX_API_KEYS_PER_USER=5
API_KEY_DEFAULT_EXPIRY_DAYS=365
ENABLE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR=false

# ===========================
# Platform Configuration
# ===========================

# Twitch Module
MODULE_NAME_TWITCH=twitch
TWITCH_APP_ID=your_twitch_app_id
TWITCH_APP_SECRET=your_twitch_app_secret
TWITCH_WEBHOOK_SECRET=your_webhook_secret
TWITCH_WEBHOOK_CALLBACK_URL=https://yourdomain.com/twitch/webhook
TWITCH_REDIRECT_URI=https://yourdomain.com/twitch/auth/callback
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret
TWITCH_ACCESS_TOKEN=your_twitch_access_token

# Discord Module
MODULE_NAME_DISCORD=discord
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_APPLICATION_ID=your_discord_app_id
DISCORD_PUBLIC_KEY=your_discord_public_key
DISCORD_COMMAND_PREFIX=!

# Slack Module
MODULE_NAME_SLACK=slack
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret
SLACK_OAUTH_REDIRECT_URI=https://yourdomain.com/slack/oauth/callback
SLACK_SOCKET_MODE=false

# ===========================
# Coordination System
# ===========================
MAX_CLAIMS=5
HEARTBEAT_INTERVAL=300
CONTAINER_ID_TWITCH=twitch_container_1
CONTAINER_ID_DISCORD=discord_container_1
CONTAINER_ID_SLACK=slack_container_1

# ===========================
# AI/Interaction Modules
# ===========================

# AI Interaction Module
MODULE_NAME_AI=ai_interaction
AI_PROVIDER=ollama
AI_HOST=http://ollama:11434
AI_PORT=11434
AI_API_KEY=
AI_MODEL=llama3.2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500
OLLAMA_HOST=0.0.0.0

# OpenAI Configuration (if using OpenAI provider)
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# MCP Configuration (if using MCP provider)
MCP_SERVER_URL=http://mcp-server:8080
MCP_TIMEOUT=30

# System Behavior
SYSTEM_PROMPT=You are a helpful chatbot assistant. Provide friendly, concise, and helpful responses to users in chat.
QUESTION_TRIGGERS=?
RESPONSE_PREFIX=ðŸ¤– 
RESPOND_TO_EVENTS=true
EVENT_RESPONSE_TYPES=subscription,follow,donation

# Performance Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
ENABLE_CHAT_CONTEXT=true
CONTEXT_HISTORY_LIMIT=5

# Other Interaction Modules
MODULE_NAME_ALIAS=alias_interaction_module
MODULE_NAME_SHOUTOUT=shoutout_interaction_module
MODULE_NAME_INVENTORY=inventory_interaction_module
MODULE_NAME_LABELS=labels_core_module

# ===========================
# Performance Settings
# ===========================
MAX_WORKERS=20
CACHE_TTL=300
BULK_OPERATION_SIZE=1000
MAX_LABELS_PER_ITEM=5

# ===========================
# Logging Configuration
# ===========================
LOG_LEVEL=INFO
LOG_DIR=/var/log/waddlebotlog
ENABLE_SYSLOG=false
SYSLOG_HOST=localhost
SYSLOG_PORT=514
SYSLOG_FACILITY=LOCAL0

# ===========================
# Module Port Configuration
# ===========================
MODULE_PORT_INVENTORY=8024
MODULE_PORT_CALENDAR=8030
MODULE_PORT_MEMORIES=8031
MODULE_PORT_YOUTUBE_MUSIC=8025
MODULE_PORT_SPOTIFY=8026
MODULE_PORT_BROWSER_SOURCE=8027
MODULE_PORT_IDENTITY_CORE=8050