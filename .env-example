# WaddleBot Environment Variables
# Copy this file to .env and fill in the values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=waddlebot
POSTGRES_PASSWORD=waddlebot_password
POSTGRES_DB=waddlebot
DATABASE_URL=postgresql://waddlebot:waddlebot_password@db:5432/waddlebot

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# =============================================================================
# Router Module Configuration
# =============================================================================
ROUTER_MAX_WORKERS=20
ROUTER_MAX_CONCURRENT=100

# =============================================================================
# Core API URLs
# =============================================================================
CORE_API_URL=http://router:8000
ROUTER_API_URL=http://router:8000/router
CONTEXT_API_URL=http://router:8000/api/context
REPUTATION_API_URL=http://router:8000/api/reputation
GATEWAY_ACTIVATE_URL=http://router:8000/api/gateway/activate

# =============================================================================
# Email/SMTP Configuration (Optional)
# =============================================================================
SMTP_HOST=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_TLS=true
SMTP_PORT=587
FROM_EMAIL=noreply@waddlebot.com

# =============================================================================
# Twitch Module Configuration
# =============================================================================
TWITCH_APP_ID=
TWITCH_APP_SECRET=
TWITCH_WEBHOOK_SECRET=
TWITCH_WEBHOOK_CALLBACK_URL=https://your-domain.com/twitch/webhook
TWITCH_REDIRECT_URI=https://your-domain.com/twitch/auth/callback

# =============================================================================
# Discord Module Configuration
# =============================================================================
DISCORD_BOT_TOKEN=
DISCORD_APPLICATION_ID=
DISCORD_PUBLIC_KEY=
DISCORD_COMMAND_PREFIX=!

# =============================================================================
# Slack Module Configuration
# =============================================================================
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
SLACK_SIGNING_SECRET=
SLACK_OAUTH_REDIRECT_URI=https://your-domain.com/slack/oauth/callback
SLACK_SOCKET_MODE=false

# =============================================================================
# Coordination System Configuration
# =============================================================================
MAX_CLAIMS=5
HEARTBEAT_INTERVAL=300
# Container IDs (customize for each instance)
CONTAINER_ID_TWITCH=twitch_container_1
CONTAINER_ID_DISCORD=discord_container_1
CONTAINER_ID_SLACK=slack_container_1

# =============================================================================
# AI/Ollama Configuration
# =============================================================================
OLLAMA_HOST=0.0.0.0
AI_PROVIDER=ollama
AI_HOST=http://ollama:11434
AI_PORT=11434
AI_API_KEY=
AI_MODEL=llama3.2
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=500

# =============================================================================
# OpenAI Configuration (if using OpenAI provider)
# =============================================================================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_BASE_URL=https://api.openai.com/v1

# =============================================================================
# MCP Configuration (if using MCP provider)
# =============================================================================
MCP_SERVER_URL=http://mcp-server:8080
MCP_TIMEOUT=30

# =============================================================================
# AI System Configuration
# =============================================================================
SYSTEM_PROMPT=You are a helpful chatbot assistant. Provide friendly, concise, and helpful responses to users in chat.
QUESTION_TRIGGERS=?
RESPONSE_PREFIX=ðŸ¤– 
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
ENABLE_CHAT_CONTEXT=true
CONTEXT_HISTORY_LIMIT=5
RESPOND_TO_EVENTS=true
EVENT_RESPONSE_TYPES=subscription,follow,donation,cheer,raid,boost,member_join

# =============================================================================
# Kong Admin Broker Configuration
# =============================================================================
KONG_ADMIN_URL=http://kong:8001
KONG_ADMIN_USERNAME=
KONG_ADMIN_PASSWORD=
BROKER_SECRET_KEY=waddlebot_broker_secret_key_change_me_in_production
BROKER_API_KEY=wbot_broker_master_key_placeholder
SUPER_ADMIN_GROUP=super-admins
API_KEY_LENGTH=64
REQUIRE_EMAIL_VERIFICATION=false
LOG_LEVEL=INFO

# =============================================================================
# Labels Core Module Configuration
# =============================================================================
MAX_WORKERS=20
CACHE_TTL=300
BULK_OPERATION_SIZE=1000
REDIS_PASSWORD=

# =============================================================================
# Interaction Module Configuration
# =============================================================================
# Twitch API Configuration (for shoutout module)
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_ACCESS_TOKEN=

# =============================================================================
# Module Information
# =============================================================================
MODULE_NAME_ROUTER=router
MODULE_NAME_MARKETPLACE=marketplace
MODULE_NAME_TWITCH=twitch
MODULE_NAME_DISCORD=discord
MODULE_NAME_SLACK=slack
MODULE_NAME_AI=ai_interaction
MODULE_NAME_KONG_BROKER=kong_admin_broker
MODULE_NAME_ALIAS=alias_interaction
MODULE_NAME_SHOUTOUT=shoutout_interaction
